@model IEnumerable<Post>
@{
    ViewData["Title"] = "Home Page";
}


<div class="jumbotron p-4 p-md-5 text-white rounded bg-dark">
    <div class="col-md-6 px-0">
        <h1 class="display-4 font-italic">Welcome to our Blogpost, Post Whathever you want</h1>
        <p class="lead my-3">This is Minimal BlogPost for lazy People (No actualy I'm lazy in FrontEnd and because). Post What you want!</p>
    </div>
</div>

<h1 class="blog-post-title">All Blogs</h1>

<div class="row mb-2">

    @foreach (var post in Model)
    {
        <div class="col-md-6">
            <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                <div class="col p-4 d-flex flex-column position-static">
                    <strong class="d-inline-block mb-2 text-success">@post.Category</strong>
                    <h3 class="mb-0">@post.Title</h3>
                    <div class="mb-1 text-muted">@post.Date | @post.Author.FirstName @post.Author.LastName </div>
                    <p class="mb-auto">@post.Content </p>
                    <a href="singlepost.html" class="stretched-link">Continue reading</a>
                </div>
                <div class="col-auto d-none d-lg-block">
                    <svg class="bd-placeholder-img" width="200" height="250" xmlns="@post.Thumb" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c" /><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
                </div>
            </div>
        </div>
    }

